generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(uuid())
  username     String  @unique
  email        String  @unique
  password     String
  refreshToken String?

  Pemasukans   Pemasukan[]
  Pengeluarans Pengeluaran[]
  Laporans     Laporan[]
  OTPs         OTP[]
}

model OTP {
  id        String   @id @default(uuid())
  email     String
  otp       String
  createdAt DateTime @default(now())
  User      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Pemasukan {
  idTransaksiPemasukan String   @id @default(uuid())
  idUser               String
  jumlah               Float
  deskripsi            String
  tanggal              DateTime
  kategori             String
  sumber               String

  user    User     @relation(fields: [idUser], references: [id])
  Laporan Laporan?
}

model Pengeluaran {
  idTransaksiPengeluaran String   @id @default(uuid())
  idUser                 String
  jumlah                 Float
  deskripsi              String
  tanggal                DateTime
  kategori               String
  sumber                 String
  lampiran               String?

  user    User     @relation(fields: [idUser], references: [id])
  Laporan Laporan?
}

model Laporan {
  idLaporan              String   @id @default(uuid())
  idUser                 String
  idTransaksiPengeluaran String?  @unique
  idTransaksiPemasukan   String?  @unique
  keterangan             String
  tanggal                DateTime

  user        User         @relation(fields: [idUser], references: [id])
  pemasukan   Pemasukan?   @relation(fields: [idTransaksiPemasukan], references: [idTransaksiPemasukan])
  pengeluaran Pengeluaran? @relation(fields: [idTransaksiPengeluaran], references: [idTransaksiPengeluaran])
}
